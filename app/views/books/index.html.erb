<h1>books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>  </th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show" , book_path(book.id) %></td>
    <td><%= link_to "Edit" , edit_book_path(book.id) %></td>
    <td><%= link_to "Distroy", book_path(book.id) , method: :delete, "date-confirm" => "are you sure?" %></td>
  </tbody>
    <% end %>
  </table>



<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
