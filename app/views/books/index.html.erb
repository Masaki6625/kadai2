<h1>books</h1>

<% @books.each do |book| %>

<p>Title</p>
<span><%= book.title %></span>

<p>Body</p>
<span><%= book.body %></span>

<%= link_to "show" , book_path(book.id) %>
<%= link_to "edit" , edit_book_path(book.id) %>
<% end %>




<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>

  <h5>Body</h5>
  <%= f.text_field :body %>

  <%= f.submit 'Create Book' %>
<% end %>